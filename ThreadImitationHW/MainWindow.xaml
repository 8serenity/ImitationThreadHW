<Window x:Class="ThreadImitationHW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadImitationHW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Width="150" Height="30" Name="textInfo"></TextBlock>
        <Button Height="25" Width="150" Name="startButton" Content="Start Long Process" Margin="0 100 0 0" Click="StartClicked"/>
        <Button Height="25" Width="150" Name="cancelButton" Content="Stop Long Process"  Margin="0 200 0 0" Click="StopClicked"/>
    </Grid>
</Window>
